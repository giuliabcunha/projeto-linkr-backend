generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  image_url String?
  createdAt DateTime @default(now())
  Post      Post[]
}

model Post {
  id          Int      @id @default(autoincrement())
  userId      Int
  link        String
  description String? // opcional
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
